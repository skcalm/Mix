<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="example.com.mix.ui.MainActivity">

        <Button
            android:id="@+id/btn_greendao_test"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FF6060"
            android:onClick="onClick"
            android:text="greendao test"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#FF6060"
            android:onClick="onClick"
            android:text="CoordinatorLayout"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_coordinator2_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#FF6060"
            android:onClick="onClick"
            android:text="CoordinatorLayout2"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_coordinator3_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#FF6060"
            android:onClick="onClick"
            android:text="CoordinatorLayout3"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_coordinator4_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#FF6060"
            android:onClick="onClick"
            android:text="CoordinatorLayout4"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_coordinator_layout2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#FF6060"
            android:onClick="onClick"
            android:text="toolbar"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_scene_transition"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#FF6060"
            android:onClick="onClick"
            android:text="scene transition"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/drag_drop"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#FF6060"
            android:onClick="onClick"
            android:text="drag drop"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>